---
import { getCollection } from "astro:content";
import PageLayout from "@/layouts/Base";
import PostPreview from "@/components/blog/PostPreview";
import SocialList from "@/components/SocialList";
import { sortMDByDate } from "@/utils";

const MAX_POSTS = 10;
const allPosts = await getCollection("post");
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS);

const cactusTech: Array<{ title: string; desc: string; href: string }> = [
	{
		title: "Vita in Campagna",
		desc: "dove trascorro la maggior parte del tempo, cioè quello lavorativo.",
		href: "https://www.vitaincampagna.it",
	},
	{
		title: "Guerre di rete",
		desc: "per approfondire i temi della privacy in relazione alle tecnologie.",
		href: "https://www.guerredirete.it",
	},
];
---

<PageLayout meta={{ title: "Home" }}>
	<section>
		<h1 class="title mb-6">Un blog personale, fuori tempo massimo. Forse.</h1>
		<p class="mb-4">
			Decluttering digitale, riconsiderazione dei siti statici, 
			presa a cuore dei temi sulla privacy on-line e riscoperta del codice puro 
			sono alla base di questa avventura che, dopo tanto vagare, considero definitiva.

			Di professione faccio il web-editor. Per passione scriverò molto di web ed editoria, ma anche di musica e blockchain. Poi #pensieri liberi.
		</p>
		<SocialList />
	</section>
	<section aria-label="Blog post list" class="mt-16">
		<h2 class="title mb-4 text-xl">Posts</h2>
		<ul class="space-y-4 sm:space-y-2">
			{
				allPostsByDate.map((p) => (
					<li class="flex flex-col gap-x-2 sm:flex-row">
						<PostPreview post={p} />
					</li>
				))
			}
		</ul>
	</section>
	<section class="mt-16">
		<h2 class="title mb-4 text-xl">Link esterni</h2>
		<ul class="space-y-4 sm:space-y-2">
			{
				cactusTech.map(({ href, title, desc }) => (
					<li>
						<a
							href={href}
							target="_blank"
							rel="noopener noreferrer"
							class="cactus-link inline-block"
						>
							{title}
						</a>:
						<p class="inline-block sm:mt-2">{desc}</p>
					</li>
				))
			}
		</ul>
	</section>
</PageLayout>
